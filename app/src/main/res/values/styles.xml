<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--기본 배경 테마-->
    <style name="NoActionBarThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorLightBlack3</item>
        <item name="android:windowBackground">@color/colorLightBlack3</item>
        <item name="bottomNavigationStyle">@color/colorLightBlack3</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="NoActionBarThemeWhite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="bottomNavigationStyle">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">true</item> <!--status bar text color change-->
    </style>


    <style name="TextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="TableTextLeftStyle">
        <item name="android:textColor">@color/colorPaltte4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TableTextRightStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="android:textAppearance">@color/colorWhite</item>

    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorPaltte5</item>
    </style>

    <style name="TextHintStyle">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
