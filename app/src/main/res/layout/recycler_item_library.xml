<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.hyden.ext.ImageViewExtKt"/>

        <variable
            name="type"
            type="com.hyden.util.ImageTransformType" />
        <variable
            name="response"
            type="com.hyden.booklibrary.data.local.db.BookEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/img_book_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            loadUrl="@{response.cover}"
            tranformType="@{type.FIT}"
            android:layout_gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>