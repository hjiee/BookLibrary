<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View" />
        <variable
            name="vm"
            type="com.hyden.booklibrary.view.search.SearchViewModel" />

    </data>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/colorLightBlack3">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlways">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetEnd="16dp"
                app:contentInsetStart="16dp"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--검색 타입-->
                    <Spinner
                        android:id="@+id/sp_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:entries="@array/search"
                        style="@style/SpinnerStyle"
                        android:spinnerMode="dialog"
                        android:backgroundTint="@color/colorWhite"
                        app:layout_constraintBottom_toBottomOf="@+id/edt_search_input"
                        app:layout_constraintTop_toTopOf="@+id/edt_search_input"
                        app:layout_constraintVertical_bias="1.0"
                        tools:layout_editor_absoluteX="1dp" />

                    <!--입력텍스트-->
                    <EditText
                        android:id="@+id/edt_search_input"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        style="@style/TextStyle"
                        android:textSize="14sp"
                        android:textColorHint="@color/colorWhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/sp_choice"
                        app:layout_constraintRight_toLeftOf="@+id/ib_clear"
                        app:layout_constraintTop_toTopOf="parent" />


                    <!--클리어-->
                    <ImageButton
                        android:id="@+id/ib_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:visibility="invisible"
                        android:src="@drawable/ic_action_clear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/colorWhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

</layout>