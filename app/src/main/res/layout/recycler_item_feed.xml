<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.hyden.ext.ImageViewExtKt" />

        <import type="com.hyden.ext.DateExtKt" />

        <import type="android.view.View" />

        <variable
            name="type"
            type="com.hyden.util.ImageTransformType" />

        <variable
            name="response"
            type="com.hyden.booklibrary.view.feed.model.FeedData" />

        <variable
            name="feedVm"
            type="com.hyden.booklibrary.view.feed.FeedViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorLightBlack1"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_profile"
                loadUrl="@{response.feed.sharedInfo.users.profile}"
                tranformType="@{type.CIRCLE}"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/sample" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@{response.feed.sharedInfo.users.nickName}"
                app:layout_constraintLeft_toRightOf="@id/iv_profile"
                app:layout_constraintTop_toTopOf="@id/iv_profile"
                tools:text="구글" />

            <TextView
                android:id="@+id/tv_time"
                elapsedTimeFormat="@{response.feed.sharedInfo.sharedDate}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:textColor="@color/colorWhite"
                android:textSize="9sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_nickname"
                app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
                tools:text="52초전" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="@{(response.feed.bookEntity.title.split(` - `)[0] == null || response.feed.bookEntity.title.split(` - `)[0] == `null`) ? `책정보가 없습니다.` : response.feed.bookEntity.title.split(` - `)[0]}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile"
                tools:text="코틀린 인 액션" />

            <ImageView
                android:id="@+id/iv_book_cover"
                style="@style/BookImageStyle"
                loadUrl="@{response.feed.bookEntity.cover}"
                radius="@{@integer/book_image_radius}"
                tranformType="@{type.ROUND}"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:background="@drawable/book_sample_cover" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/flv_like"
                bindFeed="@{response.feed}"
                bindFeedVm="@{feedVm}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_book_cover">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@{feedVm.isContainsUser(response.feed.likesInfo.users) ? @drawable/ic_like_on : @drawable/ic_like_off}"
                    tools:background="@drawable/ic_like_on" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@{@string/like_count(response.feed.likesCount)}"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_like"
                    app:layout_constraintTop_toBottomOf="@+id/iv_like"
                    tools:text="좋아요 10개" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.hyden.booklibrary.view.feed.custom.ExpandableTextLayout
                android:id="@+id/etl_note_content"
                bindFeedData="@{response.feed}"
                bindFeedVm="@{feedVm}"
                bindText="@{response.feed.bookEntity.bookNote}"
                bindUserName="@{response.feed.sharedInfo.users.nickName}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/flv_like"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flv_like"
                app:maxCollapsedLines="3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>