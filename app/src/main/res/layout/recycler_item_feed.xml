<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.hyden.ext.ImageViewExtKt" />
        <import type="com.hyden.ext.DateExtKt" />
        <import type="android.view.View"/>

        <variable
            name="type"
            type="com.hyden.util.ImageTransformType" />

        <variable
            name="response"
            type="com.hyden.booklibrary.data.model.Feed" />

        <variable
            name="firestore"
            type="com.hyden.booklibrary.data.repository.FirebaseRepository" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/colorLightBlack1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:background="@drawable/sample"
                loadUrl="@{response.sharedInfo.users.profile}"
                tranformType="@{type.CIRCLE}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:text="구글"
                android:text="@{response.sharedInfo.users.nickName}"
                app:layout_constraintTop_toTopOf="@id/iv_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile"
                app:layout_constraintLeft_toRightOf="@id/iv_profile"/>

            <ImageView
                android:id="@+id/img_book_cover"
                loadUrl="@{response.bookEntity.cover}"
                tranformType="@{type.FIT}"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profile" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{(response.bookEntity.title.split(` - `)[0] == null || response.bookEntity.title.split(` - `)[0] == `null`) ? `책정보가 없습니다.` : response.bookEntity.title.split(` - `)[0]}"
                style="@style/TextStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_book_cover" />


            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_like"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_comment" />



            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_chat"
                app:layout_constraintTop_toTopOf="@id/iv_like"
                app:layout_constraintBottom_toBottomOf="@id/iv_like"
                app:layout_constraintLeft_toRightOf="@id/iv_like"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="좋아요 10개"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="@{@string/like_count(response.likesCount)}"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="@+id/iv_like"
                app:layout_constraintTop_toBottomOf="@+id/iv_like"/>


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="52초전"
                elapsedTimeFormat="@{response.sharedInfo.sharedDate}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/iv_comment"
                app:layout_constraintTop_toTopOf="@+id/iv_comment"/>


<!--            <TextView-->
<!--                android:id="@+id/tv_nickname"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="20dp"-->
<!--                tools:text="구글"-->
<!--                android:text="@{response.sharedInfo.users.nickName}"-->
<!--                app:layout_constraintLeft_toLeftOf="@+id/iv_like"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tv_comment_count"-->
<!--                app:layout_constraintRight_toLeftOf="@+id/tv_note_content"/>-->

            <com.hyden.booklibrary.util.custom.ExpandableTextLayout
                android:id="@+id/tv_note_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:maxCollapsedLines="3"
                android:layout_marginTop="10dp"
                textBinding="@{(response.bookEntity.bookNote == `null` || response.bookEntity.bookNote == null) ? response.sharedInfo.users.nickName + `   ..` : response.sharedInfo.users.nickName + `   ` + response.bookEntity.bookNote }"
                app:layout_constraintLeft_toLeftOf="@+id/iv_like"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_like_count"/>

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                tools:text="댓글 10개"
                android:visibility="@{response.commentsCount > 0 ? View.VISIBLE : View.GONE}"
                android:text="@{@string/comment_count(response.commentsCount)}"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="@+id/tv_like_count"
                app:layout_constraintTop_toBottomOf="@+id/tv_note_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>